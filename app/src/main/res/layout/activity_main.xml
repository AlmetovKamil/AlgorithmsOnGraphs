<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/graph1"
        android:layout_width="242dp"
        android:layout_height="250dp"
        android:layout_weight="2"
        app:layout_constraintEnd_toStartOf="@+id/btBegin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graph123" />

    <Button
        android:id="@+id/btBegin"
        android:layout_width="254dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:background="@drawable/bounds_selector"
        android:backgroundTint="#1856DF"
        android:text="@string/bt_begin"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/question_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:layout_weight="1"
        android:background="@drawable/bounds_selector"
        android:backgroundTint="#1856DF"
        android:text="?"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="240dp"
        android:layout_height="303dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/graph3" />

</androidx.constraintlayout.widget.ConstraintLayout>